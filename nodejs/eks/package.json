{
    "name": "@pulumi/eks",
    "version": "${VERSION}",
    "description": "Pulumi Amazon Web Services (AWS) EKS Components.",
    "license": "Apache-2.0",
    "keywords": [
        "pulumi",
        "aws",
        "eks"
    ],
    "scripts": {
        "format-check": "prettier --list-different .",
        "format": "prettier --list-different --write .",
        "lint-check": "yarn run format-check && tslint -c ../tslint.json -p tsconfig.json",
        "lint": "yarn run format && tslint -c ../tslint.json -p tsconfig.json --fix",
        "test": "jest"
    },
    "homepage": "https://pulumi.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/pulumi/pulumi-eks.git"
    },
    "bugs": "https://github.com/pulumi/pulumi-eks/issues",
    "dependencies": {
        "@pulumi/aws": "6.47.0",
        "@pulumi/kubernetes": "4.15.0",
        "@pulumi/pulumi": "^3.138.0",
        "https-proxy-agent": "^5.0.1",
        "jest": "^29.7.0",
        "js-yaml": "^4.1.0",
        "netmask": "^2.0.2",
        "semver": "^7.3.7",
        "which": "^1.3.1",
        "@iarna/toml": "^3.0.0",
        "ipaddr.js": "^2.2.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.23.9",
        "@babel/preset-typescript": "^7.23.3",
        "@types/jest": "^29.5.11",
        "@types/js-yaml": "^4.0.5",
        "@types/netmask": "^1.0.30",
        "@types/node": "^18.11.13",
        "@types/semver": "^7.3.10",
        "@types/which": "^1.3.1",
        "pkg": "^5.8.0",
        "prettier": "^2.8.1",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.6.2"
    },
    "pulumi": {
        "resource": true
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "all",
        "printWidth": 100
    },
    "jest": {
        "modulePathIgnorePatterns": [
            "/bin/"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/bin/"
        ],
        "transformIgnorePatterns": [
            "node_modules/(?!(ip-bigint))"
        ]
    }
}
